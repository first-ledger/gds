{
  "name": "@first-ledger/gds",
  "version": "0.0.1-b.1",
  "description": "This project is a comprehensive design system that integrates design tokens and typography for the First Ledger and First Ledger Mobile applications, facilitating a cohesive visual experience across platforms.",
  "main": "index.js",
  "keywords": [
    "design",
    "system",
    "figma",
    "tailwind",
    "typography",
    "tokens"
  ],
  "author": "First Ledger",
  "license": "MIT",
  "files": [
    "dist",
    "styles"
  ],
  "scripts": {
    "ts-node": "ts-node -P ./config/tsconfig.test.json",
    "-------------------------------": "",
    "script:flds:design": "node ./scripts/first-ledger/design.mjs",
    "script:flds:tw": "node ./scripts/first-ledger/tw.mjs",
    "script:flds": "pnpm script:flds:design && pnpm script:flds:tw",
    "-----------------------------------": "",
    "script:wds:tamagui": "node ./scripts/wallet/tamagui.mjs",
    "script:wds:design": "node ./scripts/wallet/design.mjs",
    "script:wds": "pnpm script:wds:design && pnpm script:wds:tamagui",
    "---------------------------------": "",
    "prebuild": "rm -rf ./dist && rm -rf ./build && rm -rf ./styles",
    "postbuild": "pnpm script:wds && pnpm script:flds && pnpm format:styles && zip -r .bundle.zip dist styles",
    "c": "node ./config/esbuild.config.js",
    "build:watch": "pnpm build && concurrently \"tsc -w\" \"tsc-alias -w\"",
    "rebuild": "pnpm run c && pnpm postbuild",
    "rebuild:watch": "pnpm rebuild && concurrently \"tsc -w\" \"tsc-alias -w\"",
    "----------------------------": "",
    "build": "pnpm prebuild && pnpm run c && pnpm postbuild",
    "build:tamagui": "pnpm prebuild && pnpm run c && pnpm script:tamagui",
    "style": "style-dictionary build --config ./config/styles.config.json",
    "dev": "pnpm rebuild:watch",
    "--------------------------------": "",
    "lint": "eslint src --report-unused-disable-directives",
    "format": "prettier 'src' --write --list-different",
    "format:styles": "prettier 'styles' --write --log-level silent",
    "format:check": "prettier 'src' --check",
    "----------------------------------": "",
    "pub": "npm publish",
    "pub:beta": "npm publish --tag beta",
    "pub:next": "npm publish --tag next",
    "pub:release": "npm publish --access public",
    "------------------------------": "",
    "test": "pnpm env -- jest --config ./config/jest.config.ts --all --coverage --forceExit",
    "testOne": "pnpm env -- jest --config ./config/jest.config.ts --coverage --forceExit"
  },
  "prettier": "./config/prettier.config.js",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "change-case": "^5.4.4",
    "style-dictionary": "^4.3.2",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.17",
    "concurrently": "^9.1.2",
    "esbuild": "^0.23.1",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3"
  }
}
